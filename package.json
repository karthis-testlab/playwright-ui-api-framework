{
  "name": "playwright-ui-api",
  "version": "1.0.0",
  "description": "Trying to create the Automation framework for the both UI and API Tests using Playwright",
  "main": "index.js",
  "scripts": {
    "test": "npx playwright test --project=chromium",
    "test:e2e:ui": "npx playwright test e2e/ui --project=chromium",
    "test:smoke:ui": "npx playwright test e2e/ui --grep @smoke",
    "test:e2e:api": "npx playwright test e2e/api --project=chromium",
    "test:smoke:api": "npx playwright test e2e/api --grep @smoke --project=chromium"
  },
  "author": "Karthikeyan Rajendran",
  "license": "ISC",
  "devDependencies": {
    "@playwright/test": "^1.37.1"
  },
  "dependencies": {
    "@faker-js/faker": "^8.0.2",
    "dotenv": "^16.3.1"
  }
}
